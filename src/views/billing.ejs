<!DOCTYPE html>
<html>
<head>
    <title>Billing</title>

    <link rel="stylesheet" href="/css/layout.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="/css/billing.css">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>

<div class="layout">

    <%- include('./partials/sidebar', { activePage: 'billing', user: user }) %>

    <div class="main">

        <h2>Billing</h2>

        <table class="billing-table">
            <thead>
                <tr>
                    <th>Brand</th>
                    <th>Generic</th>
                    <th>Batch</th>
                    <th>Expiry</th>
                    <th>Qty</th>
                    <th>MRP</th>
                    <th>GST%</th>
                    <th>Line Total</th>
                    <th></th>
                </tr>
            </thead>

            <tbody id="billingBody">

                <!-- Initial Row -->
                <tr class="billing-row">
                    <td>
                        <input type="text" class="brandSearch" placeholder="Search brand..." autocomplete="off">
                        <div class="search-results"></div>
                    </td>
                    <td class="generic"></td>
                    <td class="batch"></td>
                    <td class="expiry"></td>
                    <td><input type="number" class="qty" value="1" min="1"></td>
                    <td class="mrp"></td>
                    <td class="gst"></td>
                    <td class="lineTotal">0.00</td>
                    <td><button class="removeRow">X</button></td>
                </tr>

            </tbody>
        </table>

        <button id="addRow">+ Add Row</button>

        <div class="billing-summary">
            <h3>Grand Total: â‚¹ <span id="grandTotal">0.00</span></h3>
            <button id="completeSale">Complete Sale</button>
        </div>

    </div>

</div>

<script src="/js/billing.js"></script>
</body>
</html>